<!-- edit.html.erb -->

<div class="container">
    <div class="row">
        <div class="col-xs-offset-4 col-xs-4">


          <%= form_for @post do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.text_area :body %>
            <%= text_field_tag :tags, @post.tags.map(&:name).join(', ') %>
            <%= token_tag form_authenticity_token %>
            <%= f.submit "Update" %>
          <% end %>

    </div>
   </div>
</div>



