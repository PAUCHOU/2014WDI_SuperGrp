<!-- edit.html.erb -->

<div class="container">
    <div class="row">
        <div class="col-xs-offset-1 col-xs-6">


          <%= form_for @post do |f| %>
            <%= f.label :title %>: <br/>
            <%= f.text_field :title %> <br/><br/>
            <%= f.label :description %>: <br/> 
            <%= f.text_area :body %> <br/><br/>
            <%= f.label :tag %>: <br/>             
            <%= text_field_tag :tags, @post.tags.map(&:name).join(', ') %> <br/><br/>
            <%= token_tag form_authenticity_token %>
            <%= f.submit "Update" %>
          <% end %>

    </div>
   </div>
</div>

