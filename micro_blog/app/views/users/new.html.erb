<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h3 style="text-align: center;font-style:italic;">New User!</h3>
<div class="container">
  <%= form_for @user do |f| %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name",
                                                          autofocus: true %></br>
    <%= f.text_field :last_name,  class: "form-control", placeholder: "Last Name" %></br>
    <%= f.text_field :email,      class: "form-control", placeholder: "email" %></br>
    <%= f.text_area :image_url,   class: "form-control", placeholder: "URL to your image" %></br>
    <%= f.submit "Save Your User Info", class: "btn btn-primary" %>
  <% end %>
</div>
