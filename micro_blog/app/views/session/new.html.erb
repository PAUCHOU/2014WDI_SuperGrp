<div class="container">
    <div class="col-md-2">

<%= form_for :user do |f| %>
 
  <p>Login <%= f.text_field :email, placeholder: "Enter your email" %> </p>
  <p>Password <%= f.password_field :password, placeholder: "Enter your password" %> </p>
  <%= f.submit "Submit", :class => "btn btn-sunny text-uppercase" %><br/>

  <%= link_to "Forgot Password?", new_password_path %></br>
  <%= link_to "Sign Up!", new_user_path %>
<% end %>

</div>
</div>